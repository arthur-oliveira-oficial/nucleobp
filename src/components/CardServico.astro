---
// Componente para exibição de cards de serviços na página inicial
import Botao from './Botao.astro';

interface Props {
  titulo: string;
  descricao: string;
  imagem: string;
  alt: string;
  link: string;
}

const { titulo, descricao, imagem, alt, link } = Astro.props;
---

<div class="flex flex-col bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow">
  <div class="relative h-48 overflow-hidden">
    <img
      src={imagem}
      alt={alt}
      class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
    />
  </div>
  <div class="flex flex-col flex-grow p-6">
    <h3 class="text-xl font-semibold text-primaria mb-3">{titulo}</h3>
    <p class="text-gray-600 mb-5 flex-grow">{descricao}</p>
    <Botao
      texto="Saiba Mais"
      href={link}
      variante="outline"
      tamanho="pequeno"
      classeExtra="mt-auto"
    />
  </div>
</div>
